<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/taskPriority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task Category"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/label"
        android:backgroundTint="@color/blue"/>

    <GridLayout
        android:id="@+id/categoryGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:columnOrderPreserved="false"
        android:padding="8dp"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/groceryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:layout_margin="8dp"
            android:layout_marginRight="25dp"
            android:focusable="true"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:padding="20dp"
                android:background="@drawable/label"
                android:backgroundTint="#CCFF80"
                android:src="@drawable/grocery"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/groceryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grocery"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/workButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:layout_margin="8dp"
            android:layout_marginRight="25dp"
            android:focusable="true"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:padding="20dp"
                android:background="@drawable/label"
                android:backgroundTint="#FF9680"
                android:src="@drawable/work"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/workText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sportButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:layout_margin="8dp"
            android:focusable="true"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:padding="20dp"
                android:background="@drawable/label"
                android:backgroundTint="#CCFF80"
                android:src="@drawable/sport"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/sportText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sport"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/designButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:layout_margin="8dp"
            android:focusable="true"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:padding="20dp"
                android:background="@drawable/label"
                android:backgroundTint="#80FFD9"
                android:src="@drawable/design"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/designText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Design"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/universityButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:layout_margin="8dp"
            android:focusable="true"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:padding="20dp"
                android:background="@drawable/label"
                android:backgroundTint="#809CFF"
                android:src="@drawable/university"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/universityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="University"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/socialButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:layout_margin="8dp"
            tools:ignore="UseCompoundDrawables"
            android:focusable="true">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:padding="20dp"
                android:background="@drawable/label"
                android:backgroundTint="#FF80EB"
                android:src="@drawable/social"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/socialText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Social"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/musicButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:layout_margin="8dp"
            android:focusable="true"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:padding="20dp"
                android:background="@drawable/label"
                android:backgroundTint="#FC80FF"
                android:src="@drawable/music"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/musicText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Music"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/healthButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:layout_margin="8dp"
            android:focusable="true"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:padding="20dp"
                android:background="@drawable/label"
                android:backgroundTint="#80FFA3"
                android:src="@drawable/health"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/healthText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/movieButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:layout_margin="8dp"
            android:focusable="true"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:padding="20dp"
                android:background="@drawable/label"
                android:backgroundTint="#80D1FF"
                android:src="@drawable/movie"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/movieText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movie"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>
    </GridLayout>

    <Button
    android:id="@+id/addCategoryButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:text="Add Category"
    android:layout_gravity="center"
    android:backgroundTint="@color/blue" />
</LinearLayout>
